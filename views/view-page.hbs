<div class="d-flex flex-column">

    {{#each details}}

    <div>
        <p>First Name: <b> {{this.first_name}} </b></p>
        <p>Last Name: <b>{{this.last_name}}</b></p>
    </div>
    <div>
        <p>email: <b> {{this.email}} </b></p>
        <p>phone: <b> {{this.phone}} </b></p>
    </div>

    <div class="d-flex gap-3">

        <a href="/" style="text-decoration: none; color: rgb(4, 164, 44);"><i class="bi bi-arrow-left"></i>
            go back</a>
        <a href="/update/{{this.id}}" style="text-decoration: none; color: rgb(150, 97, 28);"><i
                class="bi bi-pencil"></i>
            Edit
        </a>
        <a href="/delete/{{this.id}}" style="text-decoration: none; color: red;"></i> <i class="bi bi-trash"></i>
            Delete</a>

    </div>

    {{/each}}

</div>